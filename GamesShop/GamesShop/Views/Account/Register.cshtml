@model GamesShop.Models.ViewModels.RegisterViewModel
    <!DOCTYPE html>
    <html>
    <head>
       
    </head>
    <body>
        <h2>Регистрация нового пользователя</h2>
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Fio" ></label><br />
                <input asp-for="Fio" class="form-control" style="width:50%"/>
                <span asp-validation-for="Fio"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label><br />
                <input asp-for="Email" class="form-control" style="width:50%"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_Card"></label><br />
                <input asp-for="ID_Card" class="form-control" style="width:50%"/>
                <span asp-validation-for="ID_Card"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label><br />
                <input asp-for="Password" class="form-control" style="width:50%"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm"></label><br />
                <input asp-for="PasswordConfirm" class="form-control" style="width:50%"/>
                <span asp-validation-for="PasswordConfirm"></span>
            </div>

            <div >
                <input class="btn btn-primary" type="submit" value="Регистрация" />
            </div>
        </form>
        </body>
</html>
