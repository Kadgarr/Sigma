@model Publisher

<h3>Форма редактирования издателя</h3>
<div>
    <form asp-action="EditPublisher" asp-controller="Publisher" method="post" class="form-group">
        <div>
            <label asp-for="@Model.IdPublisher">Id издателя</label>
            <input asp-for="@Model.IdPublisher" readonly="readonly" class="form-control" style="width:50%"/>

        </div >
        <div class="form-group">
            <label asp-for="@Model.NameOfIzdatel"> Название издателя</label>
            <input asp-for="@Model.NameOfIzdatel" class="form-control" style="width:50%"/>

        </div>
        <div class="form-group">
            <label asp-for="@Model.LinkToTheWebSite"> Ссылка на сайт</label>
            <input asp-for="@Model.LinkToTheWebSite" class="form-control" style="width:50%"/> 

        </div>

        <button class="btn btn-primary" type="submit">Подтвердить изменения</button>
    </form>
    @ViewData["MessageEdit"]
</div>