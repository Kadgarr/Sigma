@model IEnumerable<Publisher>

<h3>Список издателей</h3>
<div>
    @ViewData["MessageDeletePublisher"]
    <table>
        <tr>
            <td>
                Название издателя:
            </td>
            <td>
                Ссылка на сайт:
            </td>
        </tr>
        @foreach (var publisher in Model)
        {
            <tr>
                <td>
                    @publisher.NameOfIzdatel
                </td>
                <td>
                    @publisher.LinkToTheWebSite
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-controller="Publisher" asp-action="EditPublisher" asp-route-id="@publisher.IdPublisher">Редактировать</a>
                    </td>
                    <td>
                        <form method="post">
                            <button type="submit" asp-action="PublisherList" asp-controller="Publisher" asp-route-id="@publisher.IdPublisher">Удалить</button>
                        </form>
                    </td>
                }
            </tr>
        }

    </table>
</div>