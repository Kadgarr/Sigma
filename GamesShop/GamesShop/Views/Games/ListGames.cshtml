@model IEnumerable<GamesShop.Models.Games>


@{
    ViewData["Title"] = "GamesShop";

}
<!DOCTYPE html>
<html>
<head>
    <title>Магазин компьютерных игр</title>
    
</head>
<body>

    <h3> Список игр </h3>
   
    <table class="table-condensed">
        <tr>
            <td></td>
            <td> Название игры:</td>
            <td> Дата Релиза:</td>
            
        </tr> 
        @foreach (var games in Model)
        {
    <tr>
        <td><div  visibility:hidden">@games.IdGame</div></td>
        <td><img src="@games.Image" alt="@games.Image"></td>
        <td><a asp-action="GameView" asp-controller="Games" asp-route-id="@games.IdGame"> @games.NameOfGame</a></td>
        <td>@Html.DisplayFor(modelItem => games.DateOfRelease) </td>
        @if (User.IsInRole("admin"))
        {
            <td><a asp-action="EditGames" asp-controller="Games" asp-route-id="@games.IdGame">Редактировать</a></td>
        }

        @if (User.IsInRole("admin"))
        {
            <td>
                <form asp-controller="Games" asp-action="DeleteGame" asp-route-id="@games.IdGame" method="post">
                    <button type="submit">
                        Удалить
                    </button>
                </form>
            </td>
        }
    </tr>
        }

    </table>

    

</body>
</html>