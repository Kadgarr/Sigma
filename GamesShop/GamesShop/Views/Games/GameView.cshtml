@model GamesShop.Models.Games
@{
    ViewData["Title"] = "Редактирование записи игры";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Редактирование информации о игре</title>
</head>
<body>
    <div>
        <h3>@Model.NameOfGame</h3>
        
         
                <label asp-for="IdGame">  Id игры:</label>
                <div >
                    <input asp-for="IdGame" readonly="readonly" hidden="hidden" />
                </div>
          
           
                <label asp-for="NameOfGame">  Название игры:</label>
                <div>
                    <input asp-for="NameOfGame" readonly="readonly" />
                </div>
           
           
                <label asp-for="Image"> Ссылка на веб сайт:</label>
                <div>
                    <input asp-for="Image" readonly="readonly"/>
                </div>
           
          
                <label asp-for="DateOfRelease"> Ссылка на веб сайт:</label>
                <div>
                    <input asp-for="DateOfRelease" type="date" readonly="readonly"/>
                </div>
           
       
                <label asp-for="Description"> Описание игры:</label>
                <div>
                    <input asp-for="Description" readonly="readonly" style="width:auto; height:auto;"/>
                </div>
          
          
                <label asp-for="Cost"> Цена:</label>
                <div>
                    <input asp-for="Cost" readonly="readonly" />
                </div>
          



</div>
</body>
</html>