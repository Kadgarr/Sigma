@model Orders

<div>
    <h3>Оформление заказа</h3>
    <form asp-action="Checkout" method="post">
        <div class="form-group">
            <label asp-for="name"></label>
            <input asp-for="name" class="form-control" style="width:50%"/>
            <span asp-validation-for="name"></span>

        </div>
        <div class="form-group">
            <label asp-for="email"></label>
            <input asp-for="email" class="form-control" style="width:50%"/>
            <span asp-validation-for="email"></span>
        </div>
        <div class="form-group">
            <label asp-for="idCard"></label>
            <input asp-for="idCard" class="form-control" style="width:50%"/>
            <span asp-validation-for="idCard"></span>
        </div>

        <input class="btn btn-warning"  type="submit" value="Завершить заказ" />
    </form>
</div>