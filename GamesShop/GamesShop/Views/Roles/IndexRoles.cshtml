@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/styles_main.css" />
</head>
<body>
    <h2>Список ролей</h2>
    <table class="table  table-striped">
        @foreach (var role in Model)
        {
            <tr>
                <td class="table-dark">@role.Name</td>
                <td  class="table-primary">
                    <form asp-action="DeleteRoles" asp-route-id="@role.Id" method="post" class="form-group">
                        <button class="btn btn-danger" type="submit">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <a asp-action="CreateRoles">Добавить роль</a>
    <a asp-action="UserList">Список пользователей</a>
</body>
</html>