@model GamesShop.Models.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form method="post" class="form-group" >
    <div asp-validation-summary="All" ></div>
    <div class="form-group" >
        <input type="hidden" asp-for="Id" class="form-control" style="width: 50%"/>
    </div>
    <div class="form-group">
        <label asp-for="Email" >Email</label>
        <input type="text" asp-for="Email" class="form-control" style="width: 50%"/>
    </div>
    <div class="form-group">
        <label asp-for="Year" >Дата рождения</label>
        <input type="date" asp-for="Year"  class="form-control" style="width: 50%"/>
    </div>
    <div >
        <input class="btn btn-primary" type="submit" value="Сохранить" />
    </div>
</form>