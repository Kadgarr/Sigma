@model IEnumerable<Genre>
@{
    ViewData["Title"] = "GamesShop";
}

<h3>Список жанров</h3>


<div class="card">
    @foreach (var genre in Model)
    {
        <div class="card-header">
            <a asp-action="GenreViewGames" asp-controller="Genre" asp-route-id="@genre.IdGenre"> @genre.NameOfGenre</a>
        </div>
        <div class="card-body">
            <p class="card-text">@genre.DescriptionOfGenre</p>
            @if (User.IsInRole("admin"))
            {

                <a class="btn btn-link" asp-controller="Genre" asp-action="EditGenre" asp-route-id="@genre.IdGenre">Редактировать</a>


                <form method="post">
                    <button class="btn btn-danger" type="submit" asp-action="GenreList" asp-controller="Genre" asp-route-id="@genre.IdGenre">Удалить</button>
                </form>

            }
        </div>
    }
</div>